<div class = "row"><div class="small-4 small-offset-4 rows"><h1>Sign in</h1></div></div>

<div>
  <%= form_for(resource, :as => resource_name, :class =>"form-horizontal", :url => session_path(resource_name)) do |f| %>
  
    <div class="row">
      <div class="small-4 columns"><%= f.label :email, :class=>"right inline" %></div>
      <div class = "small-4 small-offset-4 rows"><%= f.email_field :email%></div>
    </div>
    
    <div class="row">
      <div class="small-4 columns"><%= f.label :password , :class=>"right inline"%></div>
      <div class = "small-4 small-offset-4 rows"><%= f.password_field :password %></div>
    </div>
  
    <% if devise_mapping.rememberable? -%>
    <div class="row">
      <div class="small-4 small-offset-4 rows"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div></br>
    </div>
    <% end %>
  
    <div class="small-4 small-offset-5 rows"><%= f.submit "Sign in", :class=>"round button" %></div>
  <% end %>
</div>

<div class="row">
  <div class="small-4 small-offset-4 rows"><%= render :partial => "devise/shared/links" %></div>
</div>