<div class="small-4 columns"><h1 class="right inline">Sign in</h1></div>

<%= form_for(resource, :as => resource_name, :class =>"form-horizontal", :url => session_path(resource_name)) do |f| %>

  <div class="row">
    <div class="small-6 columns"><%= f.label :email, :class=>"right inline" %></div>
    <div class="small-6 columns"><%= f.email_field :email%></div>
  </div>
  
  <div class="row">
    <div class="small-6 columns"><%= f.label :password , :class=>"right inline"%></div>
    <div class="small-6 columns"><%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-inline"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div></br>
  <% end %>

  <div class="small-6 small-offset-6 columns"><%= f.submit "Sign in", :class=>"round button" %></div>
<% end %>
<div class="row">
  <div class="small-6 small-offset-6 columns"><%= render :partial => "devise/shared/links" %></div>
</div>